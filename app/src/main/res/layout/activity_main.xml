<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <TextView
            android:id="@+id/welcome"
            android:text="Hello Everybody"
            android:textSize="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/animation_view"
            android:layout_marginBottom="22dp"
            android:layout_centerHorizontal="true"
            />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/animation_view"
        android:layout_centerHorizontal="true"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="@string/anim_below"
        android:textSize="22dp"
        android:padding="12dp"
        android:gravity="center"
        android:fontFamily="@font/ld"
        />
    <Button
        android:id="@+id/alright"
        android:layout_marginTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dec"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="ALRIGHT"
        android:textSize="22dp"
        android:background="@drawable/bg_get_start_btn"
        />

</RelativeLayout>